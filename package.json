{
  "name": "backend",
  "version": "0.15.0",
  "description": "PoliNetwork backend server",
  "private": true,
  "keywords": [],
  "author": "PoliNetwork APS",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "dev": "bun --hot --no-clear-screen ./src/server.ts | pino-pretty",
    "build": "shx rm -rf dist && bun build ./src/server.ts --production --outdir ./dist --sourcemap=linked --target bun && shx cp -r ./drizzle ./dist/",
    "build:npm": "NODE_ENV=production tsup --config tsup.npm.config.ts",
    "email": "email dev --port 3012 --dir src/emails",
    "start": "bun run ./dist/server.js",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "typecheck": "tsc --noEmit",
    "check": "biome check",
    "check:fix": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@microsoft/microsoft-graph-types": "^2.43.1",
    "@react-email/preview-server": "5.1.0",
    "@types/bun": "^1.3.6",
    "@types/nodemailer": "^7.0.3",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.2.2",
    "drizzle-kit": "^0.31.4",
    "pino-pretty": "^13.1.1",
    "react-email": "5.1.0",
    "shx": "^0.4.0",
    "socket.io-client": "^4.8.1",
    "superjson": "^2.2.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@hono/trpc-server": "^0.4.0",
    "@hono/zod-validator": "^0.7.6",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@react-email/components": "1.0.2",
    "@socket.io/bun-engine": "^0.1.0",
    "@t3-oss/env-core": "^0.13.8",
    "@trpc/server": "11.5.1",
    "better-auth": "^1.4.15",
    "croner": "^9.1.0",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.11.4",
    "node-html-parser": "^7.0.1",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "pino": "^9.11.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "socket.io": "^4.8.1",
    "zod": "^4.1.11"
  }
}
