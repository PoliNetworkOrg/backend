{
  "name": "backend",
  "version": "0.9.1",
  "description": "PoliNetwork backend server",
  "private": true,
  "keywords": [],
  "author": "PoliNetwork APS",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production tsup --config tsup.node.config.ts",
    "build:npm": "NODE_ENV=production tsup --config tsup.npm.config.ts",
    "dev": "NODE_ENV=development tsx watch --clear-screen=false --env-file=.env src/server.ts | pino-pretty",
    "start": "NODE_ENV=production node dist/server.js",
    "typecheck": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "pino-pretty": "^13.1.1",
    "superjson": "^2.2.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.4",
    "@hono/trpc-server": "^0.4.0",
    "@t3-oss/env-core": "^0.13.8",
    "@trpc/server": "11.5.1",
    "better-auth": "^1.2.7",
    "croner": "^9.1.0",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.7.6",
    "node-html-parser": "^7.0.1",
    "pg": "^8.16.3",
    "pino": "^9.11.0",
    "zod": "^4.1.11"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=24.5.2"
  }
}
