{
  "name": "backend",
  "version": "0.2.2",
  "description": "PoliNetwork backend server",
  "private": true,
  "keywords": [],
  "author": "PoliNetwork APS",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production tsup --config tsup.node.config.ts",
    "build:npm": "NODE_ENV=production tsup --config tsup.npm.config.ts",
    "dev": "NODE_ENV=development tsx watch --clear-screen=false --env-file=.env src/server.ts",
    "prestart": "tsx scripts/init.ts && pnpm run db:push",
    "start": "NODE_ENV=production node dist/server.js",
    "start:prod": "pnpm run prestart && pnpm run start",
    "db:push": "pnpm run db:tg:push && pnpm run db:web:push",
    "db:tg:push": "drizzle-kit push --config drizzle.config.tg.ts",
    "db:tg:generate": "drizzle-kit generate --config drizzle.config.tg.ts",
    "db:tg:migrate": "drizzle-kit migrate --config drizzle.config.tg.ts",
    "db:web:push": "drizzle-kit push --config drizzle.config.web.ts",
    "db:web:generate": "drizzle-kit generate --config drizzle.config.web.ts",
    "db:web:migrate": "drizzle-kit migrate --config drizzle.config.web.ts"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.4",
    "superjson": "^2.2.2",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@trpc/server": "11.0.0-rc.772",
    "drizzle-orm": "^0.39.3",
    "fastify": "^5.2.1",
    "pg": "^8.13.2",
    "zod": "^3.24.1"
  },
  "packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af"
}
